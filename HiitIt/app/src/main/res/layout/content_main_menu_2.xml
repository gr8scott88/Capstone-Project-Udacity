<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.main.MainMenuActivity">

    <GridLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnCount="2"
        android:layout_gravity="center_horizontal|fill_vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:alignmentMode="alignBounds">

        <TextView
            android:text="HIIT It!"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:textSize="45dp"
            android:textStyle="bold"
            android:paddingBottom="15dp"/>

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="Quick Start"
            android:id="@+id/button_quickstart"
            android:layout_gravity="center"
            android:foregroundGravity="center_horizontal"/>

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="Load Workout"
            android:id="@+id/button_load_workout"
            android:layout_gravity="center|fill"/>

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="Create Workout"
            android:id="@+id/button_custom_workout"
            android:layout_gravity="center|fill"/>

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="Profile"
            android:id="@+id/button_profile"
            android:layout_gravity="center|fill"/>

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="Exercise Log"
            android:id="@+id/button_exercise_log"
            android:layout_gravity="center|fill"
            />

        <Button
            style="@style/button_text"
            android:background="@drawable/main_button_style"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:text="DB Manager"
            android:id="@+id/button_db_manager"
            android:layout_gravity="center|fill"/>


        

    </GridLayout>


</FrameLayout>
